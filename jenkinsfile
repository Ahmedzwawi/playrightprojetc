pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/playwright:v1.50.0-noble'
            args '--user root'  // Exécuter en tant que root pour éviter les erreurs de permission
        }
    }
     environment {
        JAVA_HOME = "C:\Program Files\Java\jdk-23"
        PATH = "%JAVA_HOME%\bin"
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'apt-get update && apt-get install -y curl unzip'  // Installer les outils nécessaires
                sh 'curl -OL https://github.com/allure-framework/allure2/releases/download/2.23.0/allure-2.23.0.zip'
                sh 'unzip allure-2.23.0.zip'
                sh 'mv allure-2.23.0 /opt/allure'
                sh 'ln -s /opt/allure/bin/allure /usr/local/bin/allure'
            }
        }

        stage('Run Playwright Tests') {
            steps {
                sh 'npx playwright install'
                sh 'npx playwright test'
            }
        }

        stage('Publish Allure Report') {
            steps {
                sh 'allure generate allure-results -c -o allure-report'
                archiveArtifacts 'allure-results/*.*'
            }
        }
    }
     post {
                always {
                    allure includeProperties:
                     false,
                     jdk: '',
                     results: [[path: 'allure-results']]
                }
            }
}
